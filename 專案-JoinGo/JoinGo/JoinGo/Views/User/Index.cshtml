<script>
    //無限滾動
    function initLoadMore(tabIndex) {
        let page = 1;
        let btn = $(`#load-more-btn-${tabIndex}`);
        let container = $(`#activity-container-${tabIndex}`);

        btn.click(function () {
            page++;
            console.log(`Tab ${tabIndex} 載入第 ${page} 頁`);

            $.ajax({
                url: '@Url.Action("LoadMoreActivities", "User")',
                type: 'GET',
                data: { page: page, tab: tabIndex },
                success: function (data) {
                    if (data.trim() === '') {
                        btn.hide();
                    } else {
                        container.append(data);
                    }
                },
                error: function () {
                    alert('載入更多活動失敗');
                }
            });
        });
    }
   //按愛心
    $(document).on('click', '.like-btn', function (e) {
        e.stopPropagation(); // 阻止冒泡，避免觸發外層 <a>
        let btn = $(this);
        let actId = btn.data('actid');

        $.ajax({
            url: '@Url.Action("ToggleLike", "User")',
            type: 'POST',
            data: { actId: actId },
            success: function (data) {
                if (!data.success) {
                    // 未登入處理
                    Swal.fire({
                        icon: 'warning',
                        title: data.message,
                        confirmButtonText: '確定'
                    });
                    return;
                }

                // 更新數字
                btn.siblings('.like-count').text(data.likeCount);

                // 切換愛心實心/空心
                if (data.isLiked) {
                    btn.removeClass('fa-heart-o').addClass('fa-heart liked');
                } else {
                    btn.removeClass('fa-heart liked').addClass('fa-heart-o');
                }
            },
            error: function () {
                Swal.fire({
                    icon: 'error',
                    title: '錯誤',
                    text: '按讚失敗，請稍後再試'
                });
            }
        });
    });


    //1-6代表精選、學習成長頁籤
    $(function(){
        for (let i = 1; i <= 6; i++) {
            initLoadMore(i);
        }
    });
</script>



