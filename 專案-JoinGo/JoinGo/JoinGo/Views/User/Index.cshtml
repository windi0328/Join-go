    <script>
function initLoadMore(tabIndex) {
    let page = 1;
    let btn = $(`#load-more-btn-${tabIndex}`);
    let container = $(`#activity-container-${tabIndex}`);

    btn.click(function () {
        page++;
        console.log(`Tab ${tabIndex} 載入第 ${page} 頁`);

        $.ajax({
            url: '@Url.Action("LoadMoreActivities", "User")',
            type: 'GET',
            data: { page: page, tab: tabIndex },
            success: function (data) {
                if (data.trim() === '') {
                    btn.hide();
                } else {
                    container.append(data);

                    // 滾動到最後一個新增卡片
                    container.children().last()[0].scrollIntoView({ behavior: 'smooth', block: 'end' });
                }
            },
            error: function () {
                alert('載入更多活動失敗');
            }
        });
    });
}

$(function(){
    for (let i = 1; i <= 6; i++) {
        initLoadMore(i);
    }
});
    </script>



