        display: inline-block;
        color: white;
        transition: color 0.3s ease;
        padding-bottom: 5px;
    }

        .main-content .nav-link::after {
            content: '';
            position: absolute;
            left: 50%;
            bottom: -8px;
            transform: translateX(-50%) scaleX(0);
            transform-origin: center;
            width: 100%;
            height: 2px;
            background-color: #FF6A3D;
            transition: transform 0.3s ease;
        }

        .main-content .nav-link:hover::after {
            transform: translateX(-50%) scaleX(1);
        }

    .like-btn:hover {
        opacity: 0.8;
    }

    .like-btn {
        color: gray; /* 空心顏色 */
