@model dynamic
@{
    ViewBag.Title = "報名詳細";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<style>
    /* 卡片整體 */
    .detail-card {
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .detail-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 28px rgba(0, 0, 0, 0.2);
        }

        /* 標題區 */
        /* 卡片標題自訂顏色 */
        .detail-card .card-header {
            background-color: #8B4513 !important;
            color: white;
            font-size: 1.5rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            text-align: center;
        }

    /* 標籤欄 */
    .detail-label {
        font-weight: 600;
        color: #495057;
    }

    .detail-value {
        color: #212529;
    }

    /* 狀態標籤 */
    .badge-status {
        font-size: 0.9rem;
        padding: 0.5em 0.9em;
        border-radius: 1rem;
    }

    /* Footer按鈕 */
    .detail-card .card-footer {
        background-color: #f8f9fa;
    }

        .detail-card .card-footer .btn {
            font-weight: 500;
        }
</style>

<div class="container my-5">
    <div class="card detail-card">
        <div class="card-header">
            報名詳細資訊
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-4 detail-label">活動名稱</div>
                <div class="col-sm-8 detail-value">@Model.ActivityTitle</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 detail-label">報名者姓名</div>
                <div class="col-sm-8 detail-value">@Model.Name</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 detail-label">Email</div>
                <div class="col-sm-8 detail-value">@Model.Email</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 detail-label">電話</div>
                <div class="col-sm-8 detail-value">@Model.Phone</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 detail-label">報名時間</div>
                <div class="col-sm-8 detail-value">@Model.RegistrationDate</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 detail-label">狀態</div>
                <div class="col-sm-8">
                    <span class="badge badge-status @(Model.Status == 1 ? "bg-success" : "bg-danger")">
                        @(Model.Status == 1 ? "已報名" : "已取消")
                    </span>
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <a href="@Url.Action("MyApplyList", "User")" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left-circle"></i> 返回列表
            </a>
        </div>
    </div>
</div>
