@model dynamic
@{
    ViewBag.Title = "報名詳細";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}


<div class="container mt-5">
    <h2>報名詳細資訊</h2>

    <table class="table table-striped table-bordered mt-3">
        <tr>
            <th>活動名稱</th>
            <td>@Model.ActivityTitle</td>
        </tr>
        <tr>
            <th>報名者姓名</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>電話</th>
            <td>@Model.Phone</td>
        </tr>
        <tr>
            <th>報名時間</th>
            <td>@Model.RegistrationDate</td>
        </tr>
        <tr>
            <th>狀態</th>
            <td>@(Model.Status == 1 ? "已報名" : "已取消")</td>
        </tr>
    </table>

    <a href="@Url.Action("MyApplyList", "User")" class="btn btn-secondary">返回列表</a>
</div>
