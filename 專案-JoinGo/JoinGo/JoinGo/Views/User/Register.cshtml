@model JoinGo.Models.ViewModels.ApplyVM
@{
    ViewBag.Title = "活動報名";
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            background: #f5f7fb;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .register-container {
            max-width: 900px;
            margin: 100px auto;
            padding: 60px 50px;
            background: #fff;
            border-radius: 1.5rem;
            box-shadow: 0 25px 60px rgba(0,0,0,0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .register-container:hover {
                transform: translateY(-7px);
                box-shadow: 0 35px 75px rgba(0,0,0,0.25);
            }

            .register-container h2 {
                text-align: center;
                color: #5563DE;
                font-weight: 900;
                font-size: 3.5rem;
                margin-bottom: 25px;
            }

            .register-container .info-text {
                text-align: center;
                color: #333;
                margin-bottom: 40px;
                font-size: 1.5rem;
            }

        .form-label {
            font-weight: 700;
            color: #222;
            font-size: 1.3rem;
        }

        .form-control {
            border-radius: 0.8rem;
            box-shadow: inset 0 1px 4px rgba(0,0,0,0.12);
            font-size: 1.2rem;
            padding: 16px 18px;
        }

        .btn-gradient {
            background: linear-gradient(135deg, #74ABE2, #5563DE);
            border: none;
            color: #fff;
            font-weight: 700;
            font-size: 1.3rem;
            padding: 16px;
            border-radius: 0.8rem;
            width: 100%;
            transition: all 0.3s ease;
        }

            .btn-gradient:hover {
                background: linear-gradient(135deg, #5563DE, #74ABE2);
                transform: translateY(-3px);
                box-shadow: 0 12px 30px rgba(0,0,0,0.3);
            }

        .text-danger {
            font-size: 1rem;
        }
    </style>
</head>
<body>

    <div class="register-container">
        <h2>報名活動</h2>
        <p class="info-text">
            <strong>@Model.ActTitle</strong><br />
            報名時間：@Model.ApplyStartDate ~ @Model.ApplyEndDate
        </p>

        @using (Html.BeginForm("Register", "User", FormMethod.Post, new { id = "registerForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.ActID)

            <div class="mb-4">
                @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "請輸入姓名" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>

            <div class="mb-4">
                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "請輸入Email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-4">
                @Html.LabelFor(m => m.Phone, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "請輸入聯絡電話" })
                @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-gradient">
                送出報名 <i class="fa fa-paper-plane ms-2"></i>
            </button>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(function () {
            $("#registerForm").submit(function (e) {
                e.preventDefault(); // 阻止表單預設送出

                $.ajax({
                    url: this.action,
                    type: this.method,
                    data: $(this).serialize(),
                    success: function (res) {
                        if (res.success) {
                            Swal.fire({
                                icon: 'success',
                                title: '報名成功！',
                                text: res.message,
                                showConfirmButton: false,
                                timer: 2000
                            }).then(() => {
                                // 成功後跳轉到活動詳情頁
                                window.location.href = '/User/DetailsAct?ActID=' + $("input[name='ActID']").val();
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: '報名失敗',
                                text: res.message,
                                confirmButtonText: '我知道了'
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: '系統錯誤',
                            text: '請稍後再試'
                        });
                    }
                });
            });
        });
    </script>
</body>
</html>