@model JoinGo.Models.ViewModels.ActivityVM
@using JoinGo.Models.Author;
@{
    ViewBag.Title = "查看活動";
    //Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<section class="containerArea" id="content">
    <article class="main-content">
        <div class="container mt-4">

            <nav aria-label="breadCrumbs">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@(AuthorModel.Current.Role == "User" ? "/User/Index" : AuthorModel.Current.Role == "Admin" ? "/User/Index"  : "/Home/Index" )">首頁</a>
                    </li>
                    <li class="breadcrumb-item"><a href="@Url.Action("ActivityList", "Activity")">活動管理</a></li>
                    <li class="breadcrumb-item active" aria-current="page">查看活動</li>
                </ol>
            </nav>

            <div class="row justify-content-center mb-1">
                <div class="col-12">
                    <div class="table-responsive-xl table-hover first-table text-left my-4">
                        <table class="table table-bordered mb-0">
                            <tbody>
                                <tr>
                                    <th scope="row" class="align-middle gray-dark">活動名稱</th>
                                    <td class="align-middle">@Model.Name</td>
                                </tr>
                                <tr>
                                    <th scope="row" class="align-middle gray-dark">活動類型</th>
                                    <td class="align-middle">@Model.CategoryName @Model.SubCategoryName</td>
                                </tr>
                                <tr>
                                    <th scope="row" class="align-middle gray-dark">地點</th>
                                    <td class="align-middle">@Model.Location</td>
                                </tr>
                                <tr>
                                    <th scope="row" class="align-middle gray-dark">活動期間</th>
                                    <td class="align-middle">
                                        @(Model.StartDate.HasValue ? Model.StartDate.Value.ToString("yyyy年MM月dd日") : "")
                                        ~
                                        @(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("yyyy年MM月dd日") : "")
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row" class="align-middle gray-dark">報名期間</th>
                                    <td class="align-middle">
                                        @(Model.ApplyStartDate.HasValue ? Model.ApplyStartDate.Value.ToString("yyyy年MM月dd日") : "")
                                        ~
                                        @(Model.ApplyEndDate.HasValue ? Model.ApplyEndDate.Value.ToString("yyyy年MM月dd日") : "")
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row" class="align-middle gray-dark">聯絡窗口</th>
                                    <td class="align-middle">@Model.Contact</td>
                                </tr>
                                <tr>
                                    <th scope="row" class="align-middle gray-dark">窗口電話</th>
                                    <td class="align-middle">@Model.ContactPhone</td>
                                </tr>
                                <tr>
                                    <th scope="row" class="align-middle gray-dark">封面照片</th>
                                    <td class="align-middle">
                                        @if (!string.IsNullOrEmpty(Model.PicFile))
                                        {
                                            <img src="@Url.Content("~/Uploads/ActivityPics/" + Model.PicFile)"
                                                 style="max-height:150px; border:1px solid #ccc; border-radius:4px;" />
                                        }
                                        else
                                        {
                                            <span>無圖片</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row" class="align-middle gray-dark">詳細說明</th>
                                    <td class="align-middle">@Html.Raw(Model.Description)</td>

                                    @*</tr>
                                        <tr>
                                            <th scope="row" class="align-middle gray-dark">建檔人員</th>
                                            <td class="align-middle">@Model.CreatorName</td>
                                        </tr>
                                        <tr>
                                            <th scope="row" class="align-middle gray-dark">建檔時間</th>
                                            <td class="align-middle">@(Model.Created?.ToString("yyyy年MM月dd日 HH:mm"))</td>
                                        </tr>

                                        <tr>
                                            <th scope="row" class="align-middle gray-dark">更新人員</th>
                                            <td class="align-middle">@Model.UpdatorName</td>
                                        </tr>
                                        <tr>
                                            <th scope="row" class="align-middle gray-dark">更新時間</th>
                                            <td class="align-middle">@Model.Updated</td>
                                        </tr>*@

                            </tbody>
                        </table>
                    </div>
                    <div class="text-center mt-3">
                        <a href="@Url.Action("ActivityList", "Activity")" class="btn btn-secondary">返回列表</a>
                    </div>
                </div>
            </div>

        </div>
    </article>
</section>