    <style>
    :root { scroll-behavior: smooth; }
    body { line-height: 1.75; }
    .toc { position: sticky; top: 1rem; max-height: calc(100dvh - 2rem); overflow: auto; }
    .toc .list-group-item { border: none; }
    .toc .list-group-item.active { font-weight: 600; }
    .section-title { scroll-margin-top: 6rem; }
    .legal-card { border-radius: 1rem; }
    .kbd { font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace; }
